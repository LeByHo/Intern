<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.androidtown.handycar.StartActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/car_management"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape"
            android:text="내차관리"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/group"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape"
            android:text="그룹관리"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/car_management" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:background="@drawable/carinfo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/carname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:textColor="#FFFF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/carkind"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_below="@+id/carname"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:padding="0sp"
            android:scaleType="centerCrop"

            />

        <TextView
            android:id="@+id/distance_driven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="170dp"
            android:text=""
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/my_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="215dp"
            android:text=""
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="등록된 차량관리"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#cccccc"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/t"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayout" />


        <ImageButton
            android:id="@+id/addCar1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="130dp"
            android:background="@android:color/transparent"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/plus"
            />
    </FrameLayout>



</LinearLayout>