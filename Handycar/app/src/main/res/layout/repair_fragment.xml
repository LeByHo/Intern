<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/break_oil"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:text="브레이크 오일(액)"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/text"
        android:layout_above="@+id/textView2"
        android:layout_alignParentTop="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/image"
        android:text="교환요망(6.655km 초과)"
        android:layout_alignBottom="@+id/image"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView2"
        android:gravity="center"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/image"
        android:id="@+id/image2"
        android:layout_marginTop="10dp"
        android:src ="@drawable/spark_plug"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="점화플러그"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_toRightOf="@+id/image2"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/text2"
        android:layout_alignTop="@+id/image2"
        android:layout_above="@+id/textView3" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/image2"
        android:text="교환요망(16.655km 초과)"
        android:layout_alignBottom="@+id/image2"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView3"
        android:gravity="center"/>


</RelativeLayout>